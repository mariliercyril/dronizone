FROM python:3

ENV DRONIZONE_ORDER_SERVICE_HOST order
ENV DRONIZONE_ORDER_SERVICE_PORT 9001
ENV DRONIZONE_WAREHOUSE_SERVICE_HOST warehouse
ENV DRONIZONE_WAREHOUSE_SERVICE_PORT 9002
ENV DRONIZONE_FLEET_SERVICE_HOST fleet
ENV DRONIZONE_FLEET_SERVICE_PORT 9004

ADD scenario_1.py /

RUN pip install requests

CMD [ "python", "./scenario_1.py" ]